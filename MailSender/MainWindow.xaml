<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="367" Width="934">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть"/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Закрыть"/>
                <Separator/>
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Сервис" IsEnabled="False"></MenuItem>
            <MenuItem Header="Помощь" IsEnabled="False"></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Готов к труду и обороне!"/>
        </StatusBar>
        <TabControl>
            <TabItem Header="Компановка интерфейса">
                <TabControl TabStripPlacement="Bottom" >
                    <TabItem Header="Grid">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="170"/>
                                <RowDefinition Height="84"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Calendar Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Canvas">
                        <Canvas>
                            <Ellipse StrokeThickness="2" Stroke="Red" Width="75" Height="30" 
                                     Canvas.Bottom="40" Canvas.Right="60">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                <RotateTransform Angle="48.4" CenterY="0.5" CenterX="0.5"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FF1639D8" Offset="0"/>
                                        <GradientStop Color="Magenta" Offset="0.626"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Canvas>
                    </TabItem>
                    <TabItem Header="StackPanel">
                        <StackPanel>
                            <Button>Кнопка 1</Button>
                            <Button HorizontalAlignment="Left" Margin="40,5,0,10">Кнопка 2</Button>
                            <Button HorizontalAlignment="Right">Кнопка 3</Button>
                            <Button HorizontalAlignment="Center">Кнопка 4</Button>
                            <StackPanel Orientation="Horizontal" Margin="30,10,5,0">
                                <TextBlock>Text</TextBlock>
                                <Button Content="Кнопка 5" VerticalAlignment="Top"/>
                                <CheckBox IsChecked="True">Флажок</CheckBox>
                                <Calendar></Calendar>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="WrapPanel">
                        <WrapPanel>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                            <Button Margin="10" Padding="50,2">Кнопка</Button>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="UniformGrid">
                        <UniformGrid Columns="3">
                            <Button>Кнопка</Button>
                            <TextBlock TextAlignment="Center">Text</TextBlock>
                            <TextBox>Редактор текста</TextBox>
                        </UniformGrid>
                    </TabItem>
                    <TabItem Header="DockPanel">
                        <DockPanel>
                            <Button DockPanel.Dock="Bottom">Кнопка 1</Button>
                            <Button DockPanel.Dock="Right">Кнопка 2</Button>
                            <Button DockPanel.Dock="Top">Кнопка 3</Button>
                            <Button DockPanel.Dock="Left">Кнопка 4</Button>
                            <TextBox DockPanel.Dock="Bottom">Редактор текста</TextBox>
                            <Rectangle RadiusX="10" RadiusY="20" StrokeThickness="2"
                                       Stroke="Red" Fill="Blue" Opacity="0.4"/>
                        </DockPanel>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Списки"></TabItem>
            <TabItem Header="Планировщик"></TabItem>
            <TabItem Header="Редактор писем"></TabItem>
            <TabItem Header="Статистика"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
